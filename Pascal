input_num = int(input("Ingresa el nÃºmero de lÃ­neas: "))
lista = []
for n in range(input_num):
    lista.append([])
    lista[n].append(1)
    for m in range(1, n):
        lista[n].append(lista[n - 1][m - 1] + lista[n - 1][m])
    if input_num != 0:
        lista[n].append(1)
for n in range(input_num):
    print(" " * (input_num - n), end=" ", sep=" ")
    for m in range(0, n + 1):
        print("{0:5}".format(lista[n][m]), end=" ", sep=" ")
    print()
